# Run the container with `docker run -p 3000:3000 -t sainseni.app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system sainseni.app && \
          adduser --system -G sainseni.app sainseni.app

COPY dist/apps/sainseni.app sainseni.app
RUN chown -R sainseni.app:sainseni.app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix sainseni.app --omit=dev -f install

CMD [ "node", "sainseni.app" ]
